<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutHolder">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topSection">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#ddd"
            android:id="@+id/warpSection"
            android:focusable="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="73dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/table_tennis"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="OFIS Companion"
                    android:id="@+id/textView4"
                    android:textColor="#363636"
                    android:textSize="20sp" />

            </LinearLayout>

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="73dp"
                android:id="@+id/imageButton"
                android:src="@drawable/gear"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:tint="#ff8a1a6c"

                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/middleSection"
        android:background="#2AA8D3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Start"
            android:id="@+id/textView5"
            android:textColor="#fff"
            android:textSize="29sp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton2"
                android:src="@drawable/airplane"
                android:background="#00d6d7d7"
                android:tint="#ffffef38"
                android:layout_weight="1"
                android:scaleType="fitCenter" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton3"
                android:src="@drawable/mark"
                android:background="#00d6d7d7"
                android:tint="#fffcfdff"
                android:layout_weight="1"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton4"
                android:src="@drawable/pic"
                android:background="#00d6d7d7"
                android:tint="#fffcfdff"
                android:layout_weight="1"
                android:scaleType="fitCenter"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Соревнования ждут"
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="18sp"
                android:typeface="sans" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Выбираем точку"
                android:id="@+id/textView7"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="18sp"
                android:typeface="sans" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Посмотрим фотки"
                android:id="@+id/textView8"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="18sp"
                android:typeface="sans" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bottomSection"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="30dp"
        android:paddingTop="25dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView2"
                android:src="@drawable/info"
                android:background="#EFEFEF"
                android:tint="#ff20063f"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sync activity"
                android:id="@+id/textView9"
                android:typeface="sans"
                android:paddingLeft="7dp"
                android:textColor="#ff2f3d44" />

        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView" />
    </LinearLayout>

</LinearLayout>